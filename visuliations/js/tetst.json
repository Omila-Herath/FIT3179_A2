{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Road Injuries (1990)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  

  "params": [
    {
      "name": "year",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year"
      }
    }
],
"transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "visuliations/data/reshaped_data.csv",
          "format": {"type": "csv"}
        },
        "key": "country_territory",
        "fields": ["1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019"]
      }
    },
    {"calculate": "datum[year] *1 + 0.1", "as": "Deaths"} 
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Deaths",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "country_territory"},
      {"field": "Deaths", "type": "quantitative"}
    ]
  }
}


{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths over time",
  "width": 800,
  "height": 400,
  "data": {
    "url": "visuliations/data/continent_year.csv"
  },


  "params": [
{
        "name": "index",
        "value": [{"x": {"year": 2005, "month": 1, "date": 1}}],
        "select": {
          "type": "point",
          "encodings": ["x"],
          "on": "pointerover",
          "nearest": true
        }
      },
    {
      "name": "cause_of_death",
      "value": "Meningitis",
      "bind": {
        "input": "select",
        "options": [
          
          "Meningitis",
          "Alzheimer_Disease_and_Other_Dementias",
          "Parkinsons_Disease",
          "Nutritional_Deficiencies",
          "Malaria","Drowning",
          "Interpersonal_Violence",
          "Maternal_Disorders",
          "HIV_AIDS",
          "Drug_Use",
          "Tuberculosis",
          "Cardiovascular_Diseases",
          "Lower_Respiratory_Infections",
          "Neonatal_Disorders",
          "Alcohol_Use",
          "Self_Harm",
          "Exposure_to_Nature",
          "Diarrheal_Diseases",
          "Environmental_Exposure",
          "Neoplasms",
          "Conflicts_and_Terrorism",
          "Diabetes",
          "Chronic_Kidney_Disease",
          "Poisonings",
          "Protein_Malnutrition",
          "Road_Injuries",
          "Chronic_Respiratory_Diseases",
          "Cirrhosis",
          "Digestive_Diseases",
          "Fire",
          "Acute_Hepatitis"
          ],
        "labels": [
          "Meningitis",
          "Alzheimer_Disease_and_Other_Dementias",
          "Parkinsons_Disease",
          "Nutritional_Deficiencies",
          "Malaria","Drowning",
          "Interpersonal_Violence",
          "Maternal_Disorders",
          "HIV_AIDS",
          "Drug_Use",
          "Tuberculosis",
          "Cardiovascular_Diseases",
          "Lower_Respiratory_Infections",
          "Neonatal_Disorders",
          "Alcohol_Use",
          "Self_Harm",
          "Exposure_to_Nature",
          "Diarrheal_Diseases",
          "Environmental_Exposure",
          "Neoplasms",
          "Conflicts_and_Terrorism",
          "Diabetes",
          "Chronic_Kidney_Disease",
          "Poisonings",
          "Protein_Malnutrition",
          "Road_Injuries",
          "Chronic_Respiratory_Diseases",
          "Cirrhosis",
          "Digestive_Diseases",
          "Fire",
          "Acute_Hepatitis"
          ],
          "name": "Cause of Death"
 
      }
    }

  ],
  "transform": [
    {
        "calculate": "datum[cause_of_death]",
        "as": "chosen_cause"
    }],

    

    "layer": [
      
      {
        "mark": {"type": "line", "strokeCap": "round"},
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal"
          },
          "y": {
            "field": "chosen_cause",
            "type": "quantitative"
          },
          "color": {
            "field": "Continent",
            "type": "nominal"
          }
        }
      },
      
      {
        "mark": {"type": "area", "opacity": 0.25, "filled": true},
        "encoding": {
          "x": {"field": "Year", "type": "temporal"},
          "y": {"field": "chosen_cause", "type": "quantitative"},
          "color": {
            "field": "Continent",
            "type": "nominal",
            "legend": {"symbolOpacity": 1}
          },
          "tooltip": [
            {"field": "Gender"},
            {"field": "Age"},
            {"aggregate": "count", "title": "Fatalities"}
          ]
        }
      }


    ]
}
  
  
  
  
  